{
  "name": "ro-winget",
  "displayName": "RoWinget",
  "description": "Accelerate Your Roblox Reality. Next-gen project management for Roblox.",
  "version": "1.0.0",
  "publisher": "rowinget",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:robloxManager.openProject",
    "onCommand:robloxManager.syncWithStudio",
    "onView:robloxProjectExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "robloxManager.openProject",
        "title": "Roblox: Open Project Folder"
      },
      {
        "command": "robloxManager.syncWithStudio",
        "title": "Roblox: Sync with Roblox Studio"
      },
      {
        "command": "robloxManager.refreshExplorer",
        "title": "Roblox: Refresh Project Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "robloxManager.createScript",
        "title": "Roblox: New Script (Server)"
      },
      {
        "command": "robloxManager.createLocalScript",
        "title": "Roblox: New LocalScript (Client)"
      },
      {
        "command": "robloxManager.createModuleScript",
        "title": "Roblox: New ModuleScript"
      },
      {
        "command": "robloxManager.createSnapshot",
        "title": "Roblox: Create Snapshot (Backup)"
      },
      {
        "command": "robloxManager.restoreSnapshot",
        "title": "Roblox: Restore Snapshot"
      },
      {
        "command": "robloxManager.undo",
        "title": "Roblox: Undo Last Change"
      },
      {
        "command": "robloxManager.redo",
        "title": "Roblox: Redo Last Change"
      },
      {
        "command": "robloxManager.syncFile",
        "title": "Sync File to Roblox"
      },
      {
        "command": "robloxManager.deleteFile",
        "title": "Delete File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "roblox-manager",
          "title": "Roblox Manager",
          "icon": "resources/roblox-icon.svg"
        }
      ]
    },
    "views": {
      "roblox-manager": [
        {
          "id": "robloxManager.controlPanel",
          "name": "Control Panel",
          "type": "webview"
        },
        {
          "id": "robloxProjectExplorer",
          "name": "Project Explorer"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "robloxManager.syncFile",
          "when": "view == robloxProjectExplorer",
          "group": "inline"
        },
        {
          "command": "robloxManager.deleteFile",
          "when": "view == robloxProjectExplorer"
        },
        {
          "command": "robloxManager.createScript",
          "when": "view == robloxProjectExplorer",
          "group": "2_creation"
        },
        {
          "command": "robloxManager.createLocalScript",
          "when": "view == robloxProjectExplorer",
          "group": "2_creation"
        },
        {
          "command": "robloxManager.createModuleScript",
          "when": "view == robloxProjectExplorer",
          "group": "2_creation"
        }
      ],
      "view/title": [
        {
          "command": "robloxManager.refreshExplorer",
          "when": "view == robloxProjectExplorer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Roblox Project Manager",
      "properties": {
        "robloxManager.studioPort": {
          "type": "number",
          "default": 8080,
          "description": "Port for communication with Roblox Studio"
        },
        "robloxManager.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync files on save"
        },
        "robloxManager.memoryManagerUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the Memory Manager service"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0"
  }
}
